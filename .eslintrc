{
    "rules": {
        "indent": [
          3
        ]
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "strict": [
            2,
            "function"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "globals": {
        "Promise": true
    },
    "env": {
        "browser": true,
        "node": true,
        "amd": true
    },
    "extends": "eslint:recommended"
}